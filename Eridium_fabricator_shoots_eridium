# Make all enemies carry and use the Eridian Fabricator
SparkPatchEntry,(1,1,0,),/Game/Enemies/_Shared/_Design/Character_Equipment/Enemy_WeaponData.Enemy_WeaponData,WeaponTypeData,0,,(
    (WeaponType=WT_Default,
    InventoryData=/Game/Gear/Weapons/Pistol/EridianFabricator/Inventory/Inv_EridianFabricator.Inv_EridianFabricator,
    ResolvedInventoryData=InventoryData'"/Game/Gear/Weapons/Pistol/EridianFabricator/Inventory/Inv_EridianFabricator.Inv_EridianFabricator"')
)

# Modify the Eridian Fabricator to shoot 10 Eridium stacks per shot, each worth 500 Eridium
SparkPatchEntry,(1,1,0,),/Game/Gear/Weapons/Pistol/EridianFabricator/_Design/PartSets/Part_EridianFabricator.Part_EridianFabricator,ItemPoolPartData,0,,(
    (ItemPoolData=/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500,
    ResolvedItemPoolData=ItemPoolData'"/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500"',
    NumItems=10)
)
