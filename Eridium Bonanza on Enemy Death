# Force enemies to have the Eridian Fabricator in their inventory
SparkCharacterLoadedEntry,(1,1,0,MatchAll),/Game/Enemies/_Shared/_Design/PawnAddInventory,InventoryBalanceData,0,,(
    InventoryBalanceData=/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridium_Fabricator,
    ResolvedInventoryBalanceData=InventoryBalanceData'"/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridium_Fabricator"'
)

# Make enemies equip the Eridian Fabricator as their primary weapon
SparkCharacterLoadedEntry,(1,1,0,MatchAll),/Game/Enemies/_Shared/_Design/PawnWeaponData,EquippedWeapon,0,,(
    InventoryBalanceData=/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridium_Fabricator,
    ResolvedInventoryBalanceData=InventoryBalanceData'"/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridium_Fabricator"'
)

# Ensure the Eridian Fabricator actually fires 10x Eridium stacks (500 each)
SparkCharacterLoadedEntry,(1,1,0,MatchAll),/Game/Gear/Weapons/Pistol/EridianFabricator/_Design/Projectile/Proj_EridianFabricator,SpawnedItemPools,0,,(
    (ItemPoolData=/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500,
    ResolvedItemPoolData=ItemPoolData'"/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500"',
    NumItems=10)
)
