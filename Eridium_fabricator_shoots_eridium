# Ensure enemies spawn with the Eridian Fabricator as a heavy weapon replacement
SparkCharacterLoadedEntry,(1,1,0,MatchAll),/Game/Enemies/_Shared/_Design/ItemPools/ItemPool_COVEnemyUse_HeavyWeap,BalancedItems,0,,(
    (InventoryBalanceData=/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridian_Fabricator,
    ResolvedInventoryBalanceData=InventoryBalanceData'"/Game/Gear/Weapons/HeavyWeapons/Eridian/_Shared/_Design/Balance/Balance_Eridian_Fabricator"',
    Weight=(BaseValueConstant=1, BaseValueScale=1))
)

# Modify the Eridian Fabricator to shoot 10x Eridium stacks per shot (each worth 500 Eridium)
SparkCharacterLoadedEntry,(1,1,0,MatchAll),/Game/Gear/Weapons/Pistol/EridianFabricator/_Design/Projectile/Proj_EridianFabricator,SpawnedItemPools,0,,(
    (ItemPoolData=/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500,
    ResolvedItemPoolData=ItemPoolData'"/Game/Pickups/Eridium/ItemPool_Eridium_500.ItemPool_Eridium_500"',
    NumItems=10)
)
